// 8. ERROR HANDLING
// ---------------------------
try {
    new score as int = read.in("Enter score: ");
    if (score < 0) throw new RangeError("Score cannot be negative.");
} catch (err -> e) {
    write("Error:", e.message);
} finally {
    write("Input handling complete.");
}

if (x < 0) {
    Error.Raise("Negative value.", 400, "NEG_VALUE_ERR");
}

